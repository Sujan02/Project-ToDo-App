<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>ToDo List</title>
    <!--Using Jquery 1.12 so that the operations work-->
    <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <!--adding reference to todo-list.js-->
  <script src="/assets/todo-list.js" type="text/javascript"></script>

  </script>
  <link  href="/assets/styles.css" rel="stylesheet" type="text/css"/>

  </head>
  <body>
    <h1>ToDo App</h1>
    <div id="todo-table">
      <form>
      <input type="text" name="item" placeholder="Add new item...." required/>
      <button type = "submit"> Add Item </button>
      </form>
      <ul>
        <!--<li>Item 1</li>
        <li>Item 2</li>
        <li>Item 3</li>-->
        <!--the below is the dynamic view which iterates data array & displays it-->
        <% for(var i = 0; i<todos.length; i++){ %>
          <li><%=todos[i].item%></li>
        <% } %>
      </ul>


    </div>
  </body>
</html>
